		p Grunt
		pre
			code
				| "use strict";
				| 
				| module.exports = function(grunt) {
				|   var appConfig = {
				|     uglify: {
				|       options: {
				|         mangle: false
				|       },
				|       dist: {
				|         files: {
				|           "/build/app.min.js" : [
				|             "/src/**/*.js"
				|           ]
				|         }
				|       }
				|     }
				|   };
				| 
				|   grunt.initConfig(appConfig);
				| 
				|   grunt.registerTask("default", ["watch"]);
				| };
