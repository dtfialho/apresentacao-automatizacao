				| 
				| var gulp   = require("gulp")
				|   , uglify = require("gulp-uglify");
				| 
				| gulp.task("js", function() {
				|   gulp.src("/src/js/**/*.js")
				|   .pipe(uglify({mangle: false}))
				|   .dest("/build/app.min.js");
				| });
				| 
				| gulp.task("default", ["js"]);